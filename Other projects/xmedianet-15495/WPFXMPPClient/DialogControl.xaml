<UserControl x:Class="WPFXMPPClient.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Foreground="{x:Null}"
             d:DesignHeight="300" d:DesignWidth="300">
    <RichTextBox Background="Transparent" IsReadOnly="True" IsDocumentEnabled="True" TouchDown="TextBlockChat_TouchDown"  TouchMove="TextBlockChat_TouchMove"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True"  x:Name="TextBlockChat" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderBrush="{x:Null}">
        <RichTextBox.Foreground>
            <SolidColorBrush />
        </RichTextBox.Foreground>
    </RichTextBox>
    
</UserControl>
