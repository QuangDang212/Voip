<Window x:Class="WPFXMPPClient.AddBuddyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Friend Window" Height="143" Width="447" Loaded="Window_Loaded">
    <StackPanel>

        <Label x:Name="LabelMessage">So and so would like to add you as a friend, accept</Label>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">NickName</Label>
            <TextBox Width="120" x:Name="TextBoxNickName" Text="{Binding NickName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Group</Label>
            <TextBox Width="120" x:Name="TextBoxGroup" Text="{Binding Group}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ButtonYes" Margin="10,0"  Width="60" IsDefault="True" Click="ButtonYes_Click">Yes</Button>
            <Button x:Name="ButtonNo" Margin="10,0" Width="60" Click="ButtonNo_Click">No</Button>
        </StackPanel>

    </StackPanel>
        
</Window>
